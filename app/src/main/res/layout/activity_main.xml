<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F1EEEE">

    <EditText
        android:id="@+id/pesquisarvacina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Digite o nome da vacina"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:inputType="text"
        android:textColor="#C4C4C4"
        android:textSize="18sp"/>

    <View
        android:id="@+id/add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/add"
        />

    <View
        android:id="@+id/rectangle"
        android:layout_width="303dp"
        android:layout_height="71dp"
        android:background="@drawable/rectangle"
        />
    <TextView
        android:id="@+id/nova_vacina"
        android:layout_width="219dp"
        android:layout_height="47dp"
        android:text="@string/nova_vacina"
        android:textAppearance="@style/nova_vacina"
        />

    <LinearLayout

        android:id="@+id/vacina1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rectangle"
        android:background="#BECEC9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INFLUENZA A"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="bold" />

            <View

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/rectangle_2"
                >

                <View

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/pencil_edit"
                    />
            </View>

            <View

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/garbage"
                >

                <View

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rectangle_2"
                    />

                </View>



        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data: "
            android:textColor="#808080"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lote: "
            android:textColor="#808080"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vacina2"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/vacina1"
        android:background="#BECEC9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MALARIA"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="bold" />

            <View

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/rectangle_2"
                >

                <View

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/pencil_edit"
                    />
            </View>

            <View

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/garbage"
                >

                <View

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rectangle_2"
                    />

            </View>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data: "
            android:textColor="#808080"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lote: "
            android:textColor="#808080"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vacina3"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/vacina2"
        android:background="#BECEC9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FEBRE AMARELA"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="bold" />

            <View

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/rectangle_2"
                >

                <View

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/pencil_edit"
                    />
            </View>

            <View

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/garbage"
                >

                <View

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rectangle_2"
                    />

            </View>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data: "
            android:textColor="#808080"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lote: "
            android:textColor="#808080"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vacina4"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/vacina3"
        android:background="#BECEC9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POLIOMELITE"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="bold" />

            <View

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/rectangle_2"
                >

                <View

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/pencil_edit"
                    />
            </View>

            <View

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/garbage"
                >

                <View

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rectangle_2"
                    />

            </View>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data: "
            android:textColor="#808080"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lote: "
            android:textColor="#808080"
            android:textSize="17sp" />
    </LinearLayout>

</RelativeLayout>